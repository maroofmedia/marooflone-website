---
layout: 'base.njk'
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - post
    - posts
    - nav
    - tagList
  addAllPagesToCollections: true
permalink: /tags/{{ tag | slugify }}/
eleventyComputed:
  title: "Topic: {{ tag | capitalize }} by Maroof Lone"
---

<div class="container section">

    <div class="tag-header">
        <span class="tag-label">Topic</span>
        <h1 class="tag-hero">#{{ tag }}</h1>
        <p class="tag-meta">{{ collections[tag].length }} articles found</p>
    </div>

    <div class="compact-grid">
        {% for post in collections[tag] | reverse %}
        <a href="{{ post.url }}" class="compact-card">
            
            <div class="card-top">
                <span class="card-date">{{ post.date | postDate }}</span>
            </div>

            <h3 class="card-title">
                {{ post.data.title }}
            </h3>

            <div class="card-bottom">
                <span class="read-more">Read Article <i class="fas fa-arrow-right"></i></span>
            </div>

        </a>
        {% endfor %}
    </div>

    <div class="tag-footer">
        <a href="/blog" class="view-all-btn">
             <i class="fas fa-th-large"></i> View All Topics
        </a>
    </div>

</div>

<style>
/* --- 1. Header Styling --- */
.tag-header {
    text-align: center;
    margin-bottom: 2.5rem; 
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border-color);
}

.tag-label {
    font-family: 'Courier New', monospace;
    font-size: 0.8rem;
    color: var(--accent);
    text-transform: uppercase;
    letter-spacing: 2px;
    display: block;
    margin-bottom: 0px; 
}

.tag-hero {
    font-size: 3rem;
    font-weight: 800;
    color: #fff;
    margin: 0;
    line-height: 1.2;
}

.tag-meta {
    color: var(--text-muted);
    font-size: 0.95rem;
    margin-top: 5px; 
    margin-bottom: 0;
}

/* --- 2. Compact Grid --- */
.compact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 20px;
    margin-bottom: 4rem;
}

.compact-card {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 24px;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    transition: all 0.2s ease;
    height: 100%;
}

.compact-card:hover {
    transform: translateY(-4px);
    border-color: var(--accent);
    background: #161a1f;
}

.card-top { margin-bottom: 12px; }
.card-date { font-size: 0.8rem; color: var(--text-muted); font-family: 'Courier New', monospace; }

.card-title {
    font-family: var(--font-main);
    color: #fff;
    font-size: 1.15rem;
    font-weight: 700;
    margin: 0 0 20px 0;
    line-height: 1.4;
    flex-grow: 1;
}

.card-bottom { margin-top: auto; }

.read-more {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--accent);
    display: flex;
    align-items: center;
    gap: 6px;
    transition: gap 0.2s;
}

.compact-card:hover .read-more { gap: 10px; }

/* --- 3. Footer & Button --- */
.tag-footer {
    text-align: center;
    padding-bottom: 2rem;
}

/* --- View All Button --- */
.view-all-btn {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px; 
  padding: 10px 24px; 
  
  /* Outline Style */
  background: transparent;
  color: #f0f0f0;
  border: 2px solid #222;
  border-radius: 6px; 
  text-decoration: none;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.5px; 
  font-size: 0.7rem; 
  overflow: hidden; 
  transition: color 0.3s ease;
  z-index: 1;
}

/* The Sliding Background */
.view-all-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 0%; 
  height: 100%;
  background: #222; 
  transition: width 0.3s cubic-bezier(0.25, 1, 0.5, 1);
  z-index: -1; 
}

.view-all-btn:hover {
  color: #fff; 
}

.view-all-btn:hover::before {
  width: 100%; 
}

.view-all-btn i {
  transition: transform 0.3s ease;
  font-size: 0.9em; 
}

.view-all-btn:hover i {
  transform: translateX(4px);
}

/* --- Mobile Responsiveness --- */
@media (max-width: 768px) {
    /* 1. Ensure Side Spacing (The "Wall" Fix) */
    .container {
        padding-left: 25px !important;  
        padding-right: 25px !important;
    }

    /* 2. Tighten Header Spacing */
    .tag-header {
        margin-bottom: 1.5rem; 
        padding-bottom: 1rem;
        text-align: left;
    }

    .tag-label {
        font-size: 0.75rem;
        margin-bottom: 0;
    }

    .tag-hero {
        font-size: 2rem; 
        margin-top: 2px;
        margin-bottom: 2px;
    }

    .tag-meta {
        font-size: 0.85rem;
        margin-top: 0;
    }

    /* 3. Grid Adjustments */
    .compact-grid {
        grid-template-columns: 1fr;
        gap: 20px;
        margin-bottom: 3rem;
    }
    
    .compact-card {
        padding: 20px;
    }
}
</style>