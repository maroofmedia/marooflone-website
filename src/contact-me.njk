<style>
  
  /* Main Container */
  .contact-section {
    padding: 3rem 1rem;
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contact-wrapper {
    width: 100%;
    max-width: 1000px;
    display: grid;
    grid-template-columns: 1.2fr 0.9fr; 
    gap: 4rem;
    align-items: start;
  }

  /* --- LEFT SIDE: Info & Socials --- */
  .contact-info h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
    background: linear-gradient(90deg, #fff, #a0aec0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: 1.1;
  }

  .contact-desc {
    color: #a0aec0;
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 2.5rem;
  }

  /* Social Grid */
  .social-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 15px;
  }

  .social-card {
    display: flex;
    align-items: center;
    gap: 15px;
    padding: 12px 18px;
    background: #1a202c;
    border: 1px solid #2d3748;
    border-radius: 12px;
    text-decoration: none;
    color: #fff;
    transition: all 0.3s ease;
  }

  .social-card:hover {
    transform: translateY(-3px);
    border-color: #4FD1C5;
    background: #232936;
    box-shadow: 0 10px 20px rgba(79, 209, 197, 0.1);
  }

  .social-card i {
    font-size: 1.4rem;
    color: #4FD1C5;
  }

  .social-card span {
    font-weight: 600;
    font-size: 0.95rem;
  }

  /* --- RIGHT SIDE: Form --- */
  .contact-form-card {
    background: #1a202c;
    padding: 2rem;
    border-radius: 20px;
    border: 1px solid #2d3748;
    box-shadow: 0 20px 40px rgba(0,0,0,0.2);
  }

  .contact-form-card h2 {
    margin-top: 0;
    margin-bottom: 1.5rem;
    color: #fff;
    font-size: 1.5rem;
  }

  .form-group { margin-bottom: 1rem; }
  
  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: #a0aec0;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .form-group input, 
  .form-group textarea {
    width: 100%;
    padding: 12px 16px;
    background: #2d3748;
    border: 2px solid transparent;
    border-radius: 10px;
    color: #fff;
    font-family: inherit;
    font-size: 0.95rem;
    transition: all 0.2s;
    box-sizing: border-box;
  }

  .form-group input:focus, 
  .form-group textarea:focus {
    outline: none;
    border-color: #4FD1C5;
    background: #171923;
  }

  /* WhatsApp Field specific styles */
  .phone-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }
  .phone-input-wrapper .country-code {
    position: absolute;
    left: 14px;
    color: #a0aec0;
    font-size: 0.95rem;
    pointer-events: none;
    font-weight: 500;
  }
  .phone-input-wrapper input {
    padding-left: 50px !important;
  }

  .full-submit-btn {
    width: 100%;
    padding: 14px;
    background: #4FD1C5;
    color: #111;
    border: none;
    border-radius: 10px;
    font-weight: 700;
    font-size: 1rem;
    cursor: pointer;
    transition: transform 0.2s, background 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    margin-top: 10px;
  }

  .full-submit-btn:hover {
    background: #3dbcb2;
    transform: translateY(-2px);
  }

  /* --- MOBILE RESPONSIVE FIXES --- */
  @media (max-width: 850px) {
    .contact-section {
        padding-top: 1rem; 
        align-items: flex-start;
    }

    .contact-wrapper {
      grid-template-columns: 1fr;
      gap: 2.5rem;
    }
    
    .contact-info h1 { 
        font-size: 2rem;
        margin-top: 1;
    }
    
    .contact-form-card {
      padding: 1.5rem;
    }
  }
</style>

